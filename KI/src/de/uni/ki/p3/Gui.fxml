<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <Pane fx:id="pane" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets left="20.0" />
         </BorderPane.margin></Pane>
   </center>
   <left>
      <VBox spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <HBox spacing="20.0" />
            <Label text="Anzahl Partikel:" />
            <TextField fx:id="txtNum" />
            <Button mnemonicParsing="false" onAction="#doGen" text="Generieren" />
            <Button fx:id="btnStart" mnemonicParsing="false" onAction="#doStart" text="Start" />
            <Button mnemonicParsing="false" onAction="#doStop" text="Stop" />
         </children>
      </VBox>
   </left>
</BorderPane>
